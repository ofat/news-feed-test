{% extends 'layout/base.html.twig' %}

{% block title %}{{ post.translate.name }} - {{ 'title'|trans }}{% endblock %}

{% block body %}
<header class="bg-white shadow">
    <div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900">{{ 'news'|trans }}</h1>
    </div>
</header>
<main>
    <div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="bg-white rounded-xl my-5 p-5">
            <h1 class="text-3xl mb-3">
                {{ post.translate.name }}
            </h1>
            <div class="h-48 mb-3">
                <img src="{{ asset(post.getImagePath()) }}" alt="{{ post.translate.name }}" class="h-full w-full object-cover">
            </div>
            <div>
                {{ post.translate.content|raw }}
            </div>
        </div>

        <comments :post-id="{{ post.id }}"></comments>
    </div>
</main>
{% endblock %}
