{% extends 'layout/base.html.twig' %}

{% block body %}
<header class="bg-white shadow">
    <div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900">{{ 'news'|trans }}</h1>
    </div>
</header>
<main>
    <div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
        {% for post in posts %}
            <a href="{{ path('post', {slug: post.translate.slug}) }}" class="flex flex-row border rounded mb-3 h-48 bg-white">
                <div class="w-1/3">
                    <img src="{{ asset(post.imagePath) }}" alt="{{ post.translate.name }}" class="block w-full h-full object-cover">
                </div>
                <div class="w-2/3 box-border p-2">
                    <div class="text-lg mb-3">{{ post.translate.name }}</div>
                    <div class="text-sm">
                        {{ post.translate.description }}
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
</main>
{% endblock %}
