{% extends 'layout/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<header class="bg-white shadow">
    <div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900">{{ 'Log in'|trans }}</h1>
    </div>
</header>
<main>
    <div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
        <form method="post" class="w-1/3 m-auto">
    {% if error %}
        <div class="bg-red-400 p-3 text-white rounded">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

            <h1 class="text-xl mb-3 font-weight-normal">Please sign in</h1>
            <div class="mb-3">
                <label for="inputEmail" class="text-md">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="border rounded-xl p-1 px-2 text-black h-7 w-full block" autocomplete="email" required autofocus>
            </div>
            <div class="mb-3">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="border rounded-xl p-1 px-2 text-black h-7 w-full block" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="font-bold text-white bg-gray-900 p-3 px-5 rounded-xl hover:bg-gray-700">Sign In</button>
        </form>
    </div>
</main>
{% endblock %}