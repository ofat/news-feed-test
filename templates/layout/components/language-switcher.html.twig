<div class="flex rounded bg-gray-700">
    <div class="text-white font-bold text-sm font-medium px-3 py-2 border-r">
        {{ app.request.locale|capitalize }}
    </div>
    <a
        href="{{ path('language', {locale: (app.request.locale == 'en' ? 'fr' : 'en')}) }}"
        class="text-white px-3 py-2 rounded-r text-sm font-medium hover:bg-gray-500 hover:text-blue-50"
    >
        {{ app.request.locale == 'en' ? 'Fr' : 'En'}}
    </a>
</div>